<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activityes.CourseActivity">

    <androidx.appcompat.widget.Toolbar
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/circle_edges_color_primary"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/TvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/backgroundColor"
            android:textSize="20sp"
            tools:text="Calculo Integral">
        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ListView
                android:id="@+id/lvNames"
                android:layout_width="120dp"
                android:layout_height="380dp"
                android:background="@drawable/table_background"
                android:layout_margin="10dp">

            </ListView>

            <ListView
                android:id="@+id/lvPercent"
                android:layout_width="100dp"
                android:layout_height="380dp"
                android:background="@drawable/table_background"
                android:layout_margin="10dp">

            </ListView>

            <ListView
                android:id="@+id/lvQualification"
                android:layout_width="100dp"
                android:layout_height="380dp"
                android:background="@drawable/table_background"
                android:layout_margin="10dp">

            </ListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:background="@drawable/superior_rounded_edges_primary_color">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/tvAnalisis"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                android:gravity="center"
                tools:text="este es un ejemplo de analaiss">

            </androidx.appcompat.widget.AppCompatEditText>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNewGrade"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/circle_bottom"
                android:text="+"
                android:layout_gravity="center"
                android:textSize="20sp">

            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>